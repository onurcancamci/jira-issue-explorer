{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "./dist",
		"allowJs": false,
		"target": "es5",
		"sourceMap": true,
		"noImplicitAny": true,
		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"lib": ["es5", "es2015.promise"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "./dist"]
}
